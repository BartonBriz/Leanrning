// AngleConsoleApp.cpp 

#define _USE_MATH_DEFINES //macros for math all constant
#include <iostream>
#include <cmath>

// Demonstrates reading documentation

int main()
{
    float Angle{ 45 };
    // Convert angle to radians
    Angle = Angle * (M_PI / 180); // use math constant
    
    // calculate and print the cosine of 45 degrees
    float Cosine = cosf(Angle);
    std::cout << "Cosine of 45 degrees: " << Cosine << "\n";

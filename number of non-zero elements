#include <iostream>
using namespace std;

int main()
{ 
       setlocale(LC_ALL, "Russian");
       const int MAX_VAL = 5;// Размер массива
       int mass[MAX_VAL];// Одномерный массив
       int n = 0; // количество ненулевых элементов
       for (int i = 0; i < MAX_VAL; i++)
       {
           cout << "mass: ";
           cin >> mass[i];
       }
       cout << endl;
       for (int i = 0; i < MAX_VAL; i++)
       {
           if (mass[i] != 0)
           {
               cout << "Количество: " << i << "ненулевых элементов" << endl;
           }
       }
       return 0;
}
